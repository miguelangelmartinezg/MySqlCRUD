@model MySqlCRUD.Models.ViewModels.HijosViewModels
    @using MySqlCRUD.Helpers

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@*<link rel="stylesheet" href="MisEstilos.css" />*@
@Styles.Render("~/Content/EstiloForm.css")
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<body>
    <main>
        <section>
            <h1>
                Nuevo Registro
            </h1>
            <form action="Edit" method="post" class="Form-Contenedor">
                <input type="hidden" name="idhijos" />
                <div class="Campos">
                    @Html.LabelFor(d => d.Nombre)
                    @Html.TextBoxFor(d => d.Nombre, "", new { @class = "input-48" })
                    @*<input type="text" name="Nombre" class="input-48" />*@
                </div>
                <div class="Campos">
                    @Html.LabelFor(d => d.Apellidos)
                    @Html.TextBoxFor(d => d.Apellidos, "", new { @class = "input-48" })
                </div>
                <div class="Campos">
                    @Html.LabelFor(d => d.Direccion)
                    @Html.TextAreaFor(d => d.Direccion)
                </div>
                <div class="Campos">
                    @Html.LabelFor(d => d.Fechanac)
                    @Html.TextBoxFor(d => d.Fechanac, "", new { @class = "input-48" })
                </div>
                <div class="Campos">
                    @Html.LabelFor(d => d.Edad)
                    @Html.TextBoxFor(d => d.Edad, "", new { @class = "Numeros3D" })
                </div>

                <div class="Campos">

                    <label>Sexo</label>
                    <select name="Sexo"><option>Masculino</option><option>Femenino</option></select>
                </div>

                <div class="Campos">
                    <label>Padres</label>
                    @Html.DropDownListFor(d => d.Idmitabla, Model.Padres, new { @class = "input" })
                </div>

