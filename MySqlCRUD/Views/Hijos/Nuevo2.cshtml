@model MySqlCRUD.Models.ViewModels.HijosViewModels
@{
    ViewBag.Title = "Nuevo2";
}
@Styles.Render("~/Content/EstiloForm.css")
<h2>Nuevo2</h2>
<body>
    <main>
        <section>
            <h1>
                Nuevo Registro
            </h1>
            <form action="Nuevo" method="post" class="Form-Contenedor">

                <div class="Campos">
                    <label>Nombre</label>
                    <input type="text" name="Nombre" class="input-48" />
                </div>
                <div class="Campos">
                    <label>Apellidos</label>
                    <input type="text" name="Apellido" class="input-48" />
                </div>
                <div class="Campos">
                    <label>Dirección</label>
                    <input type="text" name="Direccion" class="input-100" />
                </div>
                <div class="Campos">
                    <label>Fecha Nacimiento</label>
                    <input type="date" name="Fechanac" class="Fechas" />
                </div>
                <div class="Campos">
                    <label>Edad</label>
                    <input type="number" name="Edad" class="Numeros3D" />
                </div>

                <div class="Campos">
                    <label>Sexo</label>
                    <select name="Sexo"><option>Masculino</option><option>Femenino</option></select>
                </div>
                <div class="Botones">
                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-save"></span>Nuevo</button>
                    <button class="btn btn-success"><span class="glyphicon glyphicon-list-alt"></span> Listar</button>
                    <button class="btn btn-success"><span class="glyphicon glyphicon-print"></span> Imprimir</button>
                    <button type="reset" class="btn btn-warning"><span class="glyphicon glyphicon-refresh"></span> Cancelar</button>
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Borrar</button>
                    <a href="~/Hijos/index" class="btn btn-info"><span class="glyphicon glyphicon-off"></span> Salir</a>
                </div>




            </form>
        </section>
    </main>
</body>

